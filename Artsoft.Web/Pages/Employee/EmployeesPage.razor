@page "/"

@using Artsoft.Web.Components

@inherits ArtsoftComponentBase

<PageTitle>Employees</PageTitle>

@if (!Initialized)
{
    <Loader />
}
else
{
    <h4 class="text-center">A list of employees</h4>
    <a href="/add" class="btn btn-outline-dark my-2">Add</a>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Age</th>
                <th>Gender</th>
                <th>DepartmentName</th>
                <th>ProgrammingLanguageName</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Employees)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Surname</td>
                    <td>@employee.Age</td>
                    <td>@employee.Gender</td>
                    <td>@employee.DepartmentName</td>
                    <td>@employee.ProgrammingLanguageName</td>
                    <td>
                        <a href="/edit/@employee.Id" class="btn btn-outline-primary">Edit</a>
                        <button type="button" @onclick=@(async () => await DeleteEmployeeAsync(employee.Id, employee.FullName)) class="btn btn-outline-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}