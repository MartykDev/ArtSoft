@page "/"

@using Artsoft.Web.Components

@inherits ArtsoftComponentBase

<PageTitle>Employees</PageTitle>

@if (Employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h4>A list of employees</h4>
    <a href="/add" class="btn btn-outline-dark">Add</a>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Age</th>
                <th>DepartmentName</th>
                <th>ProgrammingLanguageName</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Employees)
            {
                @code {
                    public int RecordsCount { get; set; } = 0; 
                }
                <tr>
                    <td>@(++RecordsCount)</td>
                    <td>@employee.Name</td>
                    <td>@employee.Surname</td>
                    <td>@employee.Age</td>
                    <td>@employee.DepartmentName</td>
                    <td>@employee.ProgrammingLanguageName</td>
                    <td>
                        <button type="button" class="btn btn-outline-primary">Edit</button>
                        <button type="button" class="btn btn-outline-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}